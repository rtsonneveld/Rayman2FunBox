<Window x:Class="Rayman2FunBox.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rayman2FunBox"
        mc:Ignorable="d"
        Title="About Rayman 2 Fun Box" Height="145.8" Width="395.2" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Rayman 2 Fun Box by Robin. Made for the GOG version of Rayman 2. Make sure to have the game running when activating the mods." VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="10,63,0,0" TextWrapping="Wrap" Text="For updates check out the GitHub repo:" VerticalAlignment="Top"/>
        <TextBlock Margin="10,84,115.8,10">
            <Hyperlink NavigateUri="https://github.com/rtsonneveld/Rayman2FunBox" RequestNavigate="Hyperlink_RequestNavigate">https://github.com/rtsonneveld/Rayman2FunBox</Hyperlink>
        </TextBlock>

    </Grid>
</Window>
